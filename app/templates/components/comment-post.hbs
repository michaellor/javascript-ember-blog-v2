<form>
  <div class="form-group">
    <label for="user">UserName</label>
  {{input value=user type="text" id="user"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
  {{input value=date type="date" id="date"}}
  </div>
  <div class="form-group">
    <label for="text">Your Thoughts</label>
  {{textarea row=8 value=text type="text" id="text"}}
  </div>

  <button {{action 'saveComment' comment}}>Submit</button>
</form>
